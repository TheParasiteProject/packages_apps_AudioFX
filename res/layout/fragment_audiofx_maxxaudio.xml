<org.lineageos.audiofx.widget.InterceptableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/interceptable_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- equalizer layout -->
    <FrameLayout class="org.lineageos.audiofx.fragment.EqualizerFragment"
              android:id="@+id/equalizer"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="0dp"/>

    <!-- knobs -->
    <FrameLayout class="org.lineageos.audiofx.fragment.ControlsFragment"
              android:id="@+id/controls"
              android:layout_weight="0"
              android:layout_width="match_parent"
              android:layout_height="200dp"/>

</org.lineageos.audiofx.widget.InterceptableLinearLayout>
